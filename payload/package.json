{
  "name": "payload",
  "description": "A blank template to get started with Payload",
  "version": "0.0.1",
  "main": "dist/server.js",
  "license": "MIT",
  "openapi": {},
  "scripts": {
    "dev": "cross-env PORT=3001 PAYLOAD_CONFIG_PATH=src/payload.config.ts nodemon",
    "build:payload": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload build",
    "build:server": "tsc",
    "build": "pnpm copyfiles && pnpm build:payload && pnpm build:server",
    "serve": "cross-env PAYLOAD_CONFIG_PATH=dist/payload.config.js NODE_ENV=production node dist/server.js",
    "copyfiles": "copyfiles -u 1 \"src/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png}\" dist/",
    "generate:types": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload generate:types",
    "generate:graphQLSchema": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload generate:graphQLSchema",
    "payload": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload",
    "tailwind": "tailwindcss -i ./src/lib/tailwind.css -o ./src/styles/compiledTailwind.scss --watch",
    "lint": "eslint './src/**/*.{js,ts,jsx,tsx}' && prettier --check . && tsc --pretty --noEmit",
    "lint:eslint": "eslint './src/**/*.{js,ts,jsx,tsx}'",
    "lint:prettier": "prettier --check .",
    "lint:types": "tsc --pretty --noEmit",
    "lint:style": "stylelint '**/*.{css,scss,sass}' --allow-empty-input"
  },
  "dependencies": {
    "@headlessui/react": "^2.0.4",
    "@heroicons/react": "^2.1.3",
    "payload": "2.18.3",
    "@payloadcms/bundler-webpack": "1.0.6",
    "@payloadcms/db-mongodb": "1.5.1",
    "@payloadcms/plugin-cloud": "^3.0.1",
    "@payloadcms/plugin-cloud-storage": "^1.1.3",
    "@payloadcms/richtext-slate": "1.5.2",
    "payload-swagger": "^1.4.0",
    "@tabler/icons-react": "^3.5.0",
    "cors": "^2.8.5",
    "dotenv": "^8.6.0",
    "express": "^4.19.2",
    "nanoid": "^5.0.7",
    "node-fetch": "2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-query": "^3.39.3",
    "react-router-dom": "5.3.4",
    "slugify": "^1.6.6",
    "ulid": "^2.3.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@swc/core": "1.3.76",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "autoprefixer": "^10.4.19",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "eslint": "^8.56.0",
    "nodemon": "^2.0.22",
    "postcss": "^8.4.38",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.2.5",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "tailwindcss": "^3.4.3",
    "ts-node": "10.9.1",
    "typescript": "^4.9.5"
  }
}
