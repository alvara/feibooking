{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react",
    "sourceMap": true,

    "moduleResolution": "node",
    "paths": {
      "payload/generated-types": ["./src/payload-types.ts"]
    }
  },
  "include": [
    "src/**/*",
    "src/collections/Pages/fields/blocks/**/*",
    "types.d.ts"
  ],
  "exclude": ["node_modules", "dist", "build"],
  "ts-node": {
    "transpileOnly": true,
    "swc": true
  }
}
